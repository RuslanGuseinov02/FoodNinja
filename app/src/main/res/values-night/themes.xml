<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FoodNinja" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="bottomNavigationStyle">@style/MyBottomBar</item>
    </style>
    <style name="TitleColor">
        <item name="android:textColor">@color/NightTitleColor</item>
    </style>
    <style name="TextsColors">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="ForgotPassColor">
        <item name="android:textColor">@color/NightForgotPassColor</item>
    </style>
    <style name="ButtonColor">
        <item name="android:backgroundTint">@color/NightButtonColor</item>
        <item name="android:textColor">@color/NightButtonTextColor</item>
    </style>
    <style name="EditTextColors">
        <item name="android:textColorHint">@color/NightHintTextColor</item>
        <item name="android:strokeColor">@color/NightBoxStrokeColor</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="endIconTint">@color/NightBoxStrokeColor</item>
    </style>
    <style name="ConstraintLayoutBackground">
        <item name="android:background">@color/NightBackgroundColor</item>
    </style>
    <style name="ButtonOrder">
        <item name="backgroundTint">@color/NightOrderButtonColor</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:textColor">@color/NightOrderButtonTextColor</item>
    </style>
    <style name="ButtonSignOut">
        <item name="backgroundTint">@color/NightOrderButtonColor</item>
        <item name="cornerRadius">15dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/LightSignOutTextColor</item>
        <item name="android:textColor">@color/NightSignOutTextColor</item>
    </style>
    <style name="ButtonChangePassword">
        <item name="backgroundTint">@color/NightOrderButtonColor</item>
        <item name="cornerRadius">15dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">#304FFE</item>
        <item name="android:textColor">#304FFE</item>
    </style>

    <style name="MyBottomBar" parent="Widget.MaterialComponents.BottomNavigationView">

        <item name="backgroundTint">@color/NightBackgroundTint</item>
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="itemIconSize">30dp</item>
        <item name="itemIconTint">@color/LightItemIconTint</item>
        <item name="itemRippleColor">@color/LightItemRippleColor</item>
        <item name="shapeAppearanceOverlay">@style/bottomNavStyle</item>
    </style>

    <style name="bottomNavStyle" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">30%</item>
    </style>
</resources>